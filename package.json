{
  "name": "vision-mate",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:backend\"",
    "dev:web": "turbo run dev --filter=web",
    "dev:mobile": "turbo run dev --filter=mobile",
    "dev:backend": "cd services/vision-backend && python3 app.py",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.16",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.19.0",
  "dependencies": {
    "metro": "^0.83.3",
    "metro-config": "^0.83.3",
    "metro-react-native-babel-preset": "^0.77.0"
  }
}
